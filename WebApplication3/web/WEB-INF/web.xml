    <security-constraint>
        <display-name>autentifisering</display-name>
        <web-resource-collection>
            <web-resource-name>Sikker</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>tomcat</role-name>
            <role-name>bruker</role-name>
        </auth-constraint>
    </security-constraint>
    
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>Sikkert omr√•de</realm-name>
        <form-login-config>
            <form-login-page>/logginn.jsp</form-login-page>
            <form-error-page>/feil.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>bruker</role-name>
    </security-role>
</web-app>
